@using ShopCar.Model;


    <div class="header_top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 col-md-7">
                    <div class="header_top_links text-right">
                        <ul>
                            <li><a href="Home.html">Đăng ký</a></li>
                            <li><a id="btnDangNhap" href="#" >đăng nhập</a></li>
                            <li><a href="cart.html">giỏ hàng</a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div>
    <div id="popup_login">
        <div class="login-form" style="height:380px">
            <div style="clear:both;text-align:right;">
                <span id="close_form" class="btn btn-danger">X</span>
            </div>
            <h2>Đăng nhập</h2>
            <div class="form-info">
                @using (Ajax.BeginForm("DangNhap", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ThongBao" }))
                {
                    <input type="text" placeholder="Email hoặc số điện thoại"><br>
                    <input type="password" placeholder="Mật khẩu"><br>
                    <button class="button-DangNhap">Đăng Nhập</button><br>
                    <button class="button-DangKy">Tạo tài khoản mới</button><br>
                    <a href="">Quên mật khẩu</a><br>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    //hiển thị
    $("#btnDangNhap").click(function () {
        $("#popup_login").load();
    })
    //đóng
    $("#close_form").click(function () {
        $("#popup_login").hide();
    })
</script>

    
<style>
    #popup_login {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        z-index: 199;
        display: none;
    }
    .login-form {
        background: #262730;
        width: 45%;
        margin: 10% auto 0;
        padding: 25px;
        height: 400px;
        border-radius: 3px;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        -o-border-radius: 3px;
    }
</style>